{
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "lib": [
        "es2020"
      ],
      "module": "CommonJS",
      "moduleResolution": "node",
      "target": "ES2020",
      "esModuleInterop": false,
      "allowSyntheticDefaultImports": true,
    },
  },
  "compilerOptions": {
    "target": "ES2017",
    // "lib": [
    //   "es6"
    // ],
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "noEmit": true,
    // "allowJs": true,
    "allowJs": false,
    "esModuleInterop": false, // used to be true
    "isolatedModules": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    // TODO - re-enable?
    // "incremental": true,
    // "tsBuildInfoFile": "node_modules/.cache/tsconfig.tsbuildinfo",
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": true,
    "removeComments": true,
    // TODO - re-enable?
    // "declaration": true,
    // "experimentalDecorators": true,
    // "emitDecoratorMetadata": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
    "**/node_modules",
    "build",
    "dist",
    "src/old",
    "src/**/old"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
  // Comment after we're done
  // "include": [
  //   "src",
  // ],
}