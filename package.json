{
  "name": "clapy-root",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">=14"
  },
  "packageManager": "yarn@3.2.2",
  "workspaces": [
    "backend-clapy",
    "figma-plugin-clapy"
  ],
  "scripts": {
    "________________ development ________________": "",
    "install:all": "yarn && yarn install:backend && yarn install:plugin",
    "dev": "npm-run-all --parallel plugin-dev up console",
    "preview": "cd backend-clapy/atest-gen && yarn && yarn start",
    "console": "yarn hasura console",
    "upgr": "yarn upgrade-interactive",
    "up": "docker compose stop dev && docker compose up -d db hasura stripe",
    "up2": "docker compose stop backend &&  docker compose up -d dev",
    "upold": "UID=\"$(id -u)\" GID=\"$(id -g)\" docker-compose stop dev && UID=\"$(id -u)\" GID=\"$(id -g)\" docker-compose up -d db hasura backend",
    "stop": "docker compose stop",
    "fixtime": "sudo ntpdate -sb time.nist.gov",
    "start:atest-gen": "cd backend-clapy/atest-gen && yarn start",
    "log": "docker compose logs -f --tail 100 backend",
    "analytics": "cd backend-clapy && yarn analytics",
    "________________ deployment ________________": "",
    "migrate:dev": "yarn hasura migrate apply --endpoint http://localhost:8089/",
    "migrate:staging": "yarn migrate:staging1 && yarn migrate:staging2 && yarn migrate:staging3",
    "migrate:prod": "yarn migrate:prod1 && yarn migrate:prod2 && yarn migrate:prod3",
    "________________ implementation details ________________": "",
    "upwait": "yarn up && sleep 5",
    "install:backend": "cd backend-clapy && yarn",
    "install:plugin": "cd figma-plugin-clapy && yarn",
    "plugin-dev": "cd figma-plugin-clapy && yarn dev",
    "plugin-test": "cd figma-plugin-clapy && yarn start",
    "migrate:staging1": "yarn hasura:server metadata apply --endpoint updateme",
    "migrate:staging2": "yarn hasura:server migrate apply --all-databases --endpoint updateme",
    "migrate:staging3": "yarn hasura:server metadata reload --endpoint updateme",
    "migrate:prod1": "yarn hasura:server metadata apply --endpoint https://hasura-loitgf2s5q-ew.a.run.app/",
    "migrate:prod2": "yarn hasura:server migrate apply --all-databases --endpoint https://hasura-loitgf2s5q-ew.a.run.app/",
    "migrate:prod3": "yarn hasura:server metadata reload --endpoint https://hasura-loitgf2s5q-ew.a.run.app/",
    "hasura:squash": "yarn hasura migrate squash --database-name \"Clapy DB\"",
    "hasura": "hasura --project db/hasura --envfile ../../.env --skip-update-check",
    "hasura:server": "hasura --project db/hasura --skip-update-check",
    "gentypes": "cd backend-clapy && yarn gentypes",
    "pinggit": "ssh -T git@github.com",
    "kill": "sudo kill -9 `sudo lsof -t -i:9001`; sudo kill -9 `sudo lsof -t -i:9000`; sudo kill -9 `sudo lsof -t -i:3000`; sudo kill -9 `sudo lsof -t -i:9229`; echo Done"
  },
  "devDependencies": {
    "@types/eslint": "^8.4.5",
    "@types/prettier": "^2.7.0",
    "eslint": "^8.21.0",
    "hasura-cli": "^2.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  }
}
