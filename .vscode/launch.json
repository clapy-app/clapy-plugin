  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Backend local",
      "type": "node",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceFolder}/backend-clapy",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["dev"],
      "outputCapture": "std",
      // "restart": true,
      // "remoteRoot": "/app",
      "localRoot": "${workspaceFolder}/backend-clapy",
      "preLaunchTask": "${defaultBuildTask}",
    },
    {
      "name": "Backend WSL debug",
      "type": "node",
      "request": "attach",
      "restart": true,
      // "remoteRoot": "/app",
      "localRoot": "${workspaceFolder}/backend-clapy",
      // "preLaunchTask": "${defaultBuildTask}",
    },
    {
      "name": "Docker: Attach to Node",
      "type": "node",
      "request": "attach",
      "restart": true,
      "remoteRoot": "/app",
      "localRoot": "${workspaceFolder}/backend-clapy",
      // "preLaunchTask": "${defaultBuildTask}",
    },
    {
      "name": "Websocket: Attach to Node",
      "type": "node",
      "request": "attach",
      "restart": true,
      "port": 9230,
      // "remoteRoot": "/app",
      "localRoot": "${workspaceFolder}/figma-plugin-clapy",
      // "preLaunchTask": "${defaultBuildTask}",
    }
  ]
}